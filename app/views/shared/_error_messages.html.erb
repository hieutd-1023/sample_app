<% if object.errors.any? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div id="error_explanation">
        <div class="alert alert-danger">
          <%= t(".contains") %><%= pluralize object.errors.count, "error" %>.
        </div>
        <ul>
          <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
