<% provide :title, t("sign_up") %>
<h1 class="signup-title"><%= t("sign_up") %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= f.label :name, t("users.new.name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t("users.new.email") %>
      <%= f.email_field :email %>
      <%= f.label :password, t("users.new.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("users.new.reset") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("sign_up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
