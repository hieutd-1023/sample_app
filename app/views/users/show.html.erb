<div class="col-md-8">
  <%= render "follow_form" %>
  <% if @user.microposts.any? %>
    <h3><%= t(".micropost") %> (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= paginate @microposts, theme: "twitter-bootstrap-3" %>
  <% end %>
</div>
